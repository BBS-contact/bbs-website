  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Feedback — BBS</title>
  <link rel="stylesheet" href="style.css" />
</head>
<body>
  <header>
    <h1>We Appreciate Your Feedback</h1>
    <p>Help us improve. Every word matters.</p>
  </header>

  <main>
    <section class="cta" id="feedback-form">
      <form id="formFeedback">
        <label for="name">Your Name (optional):</label><br>
        <input type="text" id="name" name="name"><br><br>

        <label for="comment">Your Feedback:</label><br>
        <textarea id="comment" name="comment" rows="4" cols="50" required></textarea><br><br>

        <label for="rating">Rating (1 = poor, 5 = excellent):</label><br>
        <select id="rating" name="rating" required>
          <option value="">-- Choose --</option>
          <option value="1">1 ⭐</option>
          <option value="2">2 ⭐⭐</option>
          <option value="3">3 ⭐⭐⭐</option>
          <option value="4">4 ⭐⭐⭐⭐</option>
          <option value="5">5 ⭐⭐⭐⭐⭐</option>
        </select><br><br>

        <button type="submit">Send Feedback</button>
      </form>
    </section>
  </main>

  <footer>
    <p>&copy; 2025 Big Begins Small (BBS). All rights reserved.</p>
    <p><a href="index.html">Back to Home</a></p>
  </footer>

  <script>
    document.getElementById("formFeedback").addEventListener("submit", function (e) {
      e.preventDefault();

      const feedback = {
        name: document.getElementById("name").value.trim(),
        comment: document.getElementById("comment").value.trim(),
        rating: document.getElementById("rating").value,
        timestamp: new Date().toISOString()
      };

      let feedbacks = JSON.parse(localStorage.getItem("bbsFeedback")) || [];
      feedbacks.push(feedback);
      localStorage.setItem("bbsFeedback", JSON.stringify(feedbacks));

      alert("Thank you for your feedback!");
      document.getElementById("formFeedback").reset();
    });
  </script>
</body>
